# Development Environment Configuration for ccusage-byobu
# Source this file: source examples/configurations/development.env

# Claude Configuration
export CLAUDE_PLAN_TYPE="max_20x"
export CLAUDE_CONFIG_DIR="$HOME/.claude"

# Display Settings - Full information for development
export CCUSAGE_BYOBU_FORMAT="full"
export CCUSAGE_BYOBU_COLORS="true"
export CCUSAGE_BYOBU_THRESHOLD="70"

# Performance Settings - Fast refresh for active development
export CCUSAGE_BYOBU_REFRESH="15"
export CCUSAGE_ENABLE_CACHE="1"

# Debug Settings - Enable for troubleshooting
export CCUSAGE_BYOBU_DEBUG="1"

# Cache Configuration - Optimized for development
export CCUSAGE_BYOBU_CACHE_CLEANUP_INTERVAL="15000"
export CCUSAGE_BYOBU_CACHE_MAX_KEYS="100"
export CCUSAGE_BYOBU_CACHE_WINDOW_SIZE="50"

echo "âœ… Development configuration loaded"
echo "   Plan: $CLAUDE_PLAN_TYPE"
echo "   Format: $CCUSAGE_BYOBU_FORMAT"
echo "   Refresh: ${CCUSAGE_BYOBU_REFRESH}s"
echo "   Debug: $CCUSAGE_BYOBU_DEBUG"